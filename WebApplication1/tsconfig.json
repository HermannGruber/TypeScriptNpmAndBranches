{
    "compilerOptions": {
        "module": "es2015",
        "strict": true,
        "noEmitOnError": true,
        "sourceMap": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "target": "es5",
        "lib": [
            "es2015",
            "es5",
            "dom"
        ],
        "outDir": "dist"
    },
    "exclude": [ "node_modules, wwwroot" ],
    "include": [ "scripts/**/*" ],
    "compileOnSave": true
}
